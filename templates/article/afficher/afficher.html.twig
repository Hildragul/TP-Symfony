{% extends 'base.html.twig' %}

{% block title %}Hello LuckyController!{% endblock %}

{% block body %}
{% block content %}
    <div id="layoutSidenav_content">
        <main>
            {% for article in articles %}
                <div class="card mb-3" style="width: 18rem;">
                    {% if article.getImage() %}
                        <img src="{{ asset('uploads/' ~ article.getImage()) }}" class="card-img-top" alt="Image de l'article">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ article.getTitre() }}</h5>
                        <p class="card-text">{{ article.getTexte() }}</p>
                        
                        <form action="{{ path('app_article_modifier', {'id': article.getID()}) }}" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-warning">Modifier</button>
                        </form>

                        <form action="{{ path('app_article_supprimer', {'id': article.getID()}) }}" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </main>
    </div>
{% endblock %}
{% endblock %}